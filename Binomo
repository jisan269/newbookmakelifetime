// "Demo account" ржЯрзЗржХрзНрж╕ржЯ ржкрж░рж┐ржмрж░рзНрждржи ржХрж░рзЗ "Real account" ржХрж░рж╛
const accountNameElement = document.getElementById('account-name');
if (accountNameElement) {
  accountNameElement.textContent = 'Real account';
} else {
  console.error('Account name element not found!');
}

// рж░рж┐ржлрзНрж░рзЗрж╢ ржмрж╛ржЯржи рж╣рж╛ржЗржб ржХрж░рж╛
const refreshButton = document.getElementById('refresh-btn');
if (refreshButton) {
  refreshButton.style.display = 'none';
} else {
  console.error('Refresh button not found!');
}
(function() {
    function applyChanges() {
        let realAccountRadio = document.querySelector('input[type="radio"][value="-2"]');
        let demoAccountRadio = document.querySelector('input[type="radio"][value="-1"]');

        if (realAccountRadio && demoAccountRadio) {
            // **рж░рж┐рзЯрзЗрж▓ ржЕрзНржпрж╛ржХрж╛ржЙржирзНржЯрзЗрж░ рж░рзЗржбрж┐ржУ ржмрж╛ржЯржиржХрзЗ ржнрж┐ржЬрзНржпрзБрзЯрж╛рж▓рж┐ рж╕рж┐рж▓рзЗржХрзНржЯ ржХрж░рж╛ (CSS ржжрж┐рзЯрзЗ)**
            realAccountRadio.setAttribute('checked', 'true');
            realAccountRadio.closest('.radio_md__3YrSA').classList.add('radio_checked__2JFGR');

            // **ржбрзЗржорзЛ ржЕрзНржпрж╛ржХрж╛ржЙржирзНржЯ ржЖрж╕рж▓рзЗржЗ рж╕рж┐рж▓рзЗржХрзНржЯрзЗржб ржерж╛ржХржмрзЗ**
            demoAccountRadio.checked = true;
            demoAccountRadio.closest('.radio_md__3YrSA').classList.remove('radio_checked__2JFGR');
        }

        // **ржХрзЗржЙ ржХрзНрж▓рж┐ржХ ржХрж░рж▓рзЗ рж░рж┐рзЯрзЗрж▓ рж╕рж┐рж▓рзЗржХрзНржЯ ржирж╛ рж╣рзЯ**
        document.querySelectorAll('input[type="radio"]').forEach(input => {
            input.addEventListener('click', function(event) {
                if (this.value === "-2") { // рж░рж┐рзЯрзЗрж▓ ржПржХрж╛ржЙржирзНржЯ рж╕рж┐рж▓рзЗржХрзНржЯ рж╣рждрзЗ ржжрзЗржмрзЗ ржирж╛
                    event.preventDefault();
                }
            });
        });

        // **qa_trading_balance ржерзЗржХрзЗ ржмрзНржпрж╛рж▓рзЗржирзНрж╕ рж╕ржВржЧрзНрж░рж╣ ржХрж░рж╛**
        let tradingBalanceElement = document.querySelector('#qa_trading_balance');
        let tradingBalance = tradingBalanceElement ? tradingBalanceElement.textContent.trim() : "$0.00";

        // **ржбрзЗржорзЛ ржмрзНржпрж╛рж▓рзЗржирзНрж╕ржХрзЗ $0.00 ржХрж░рж╛**
        let demoBalanceElement = document.querySelector('.type.ng-star-inserted:nth-child(2) p.balance');
        if (demoBalanceElement) {
            demoBalanceElement.textContent = "$10,000.00";
        }

        // **рж░рж┐рзЯрзЗрж▓ ржЕрзНржпрж╛ржХрж╛ржЙржирзНржЯрзЗрж░ ржмрзНржпрж╛рж▓рзЗржирзНрж╕ ржЖржкржбрзЗржЯ ржХрж░рж╛ (qa_trading_balance ржПрж░ ржмрзНржпрж╛рж▓рзЗржирзНрж╕ ржжрзЗржЦрж╛ржмрзЗ)**
        let realBalanceElement = document.querySelector('.type.ng-star-inserted p.balance');
        if (realBalanceElement) {
            realBalanceElement.textContent = tradingBalance; // рж░рж┐рзЯрзЗрж▓ ржЕрзНржпрж╛ржХрж╛ржЙржирзНржЯрзЗ ржЯрзНрж░рзЗржбрж┐ржВ ржмрзНржпрж╛рж▓рзЗржирзНрж╕ ржжрзЗржЦрж╛ржирзЛ
        }

        // **Binocoins рж╕ржмрж╕ржорзЯ 254 ржжрзЗржЦрж╛ржмрзЗ**
        let binocoinsElement = document.querySelector('.balance .text-accent.ng-star-inserted');
        if (binocoinsElement) {
            binocoinsElement.textContent = "254";
        }

        console.log(`тЬЕ рж░рж┐рзЯрзЗрж▓ ржмрзНржпрж╛рж▓рзЗржирзНрж╕ ржЖржкржбрзЗржЯ: ${tradingBalance}, ржбрзЗржорзЛ ржПржЦржи $0.00, ржПржмржВ Binocoins = 254!`);
    }

    // **MutationObserver ржжрж┐рзЯрзЗ DOM ржкрж░рж┐ржмрж░рзНрждржи ржкрж░рзНржпржмрзЗржХрзНрж╖ржг ржХрж░рж╛**
    let observer = new MutationObserver(() => {
        applyChanges();
    });

    observer.observe(document.body, { childList: true, subtree: true });

    // **ржкрзНрж░рждрж┐ рзи рж╕рзЗржХрзЗржирзНржб ржкрж░ржкрж░ ржХрзЛржб ржЪрж╛рж▓рж╛ржирзЛ (ржпржжрж┐ Observer ржорж┐рж╕ ржХрж░рзЗ)**  
    setInterval(() => {
        applyChanges();
    }, 2000);

    console.log("ЁЯЪА Auto-Apply ржХрзЛржб ржЪрж╛рж▓рзБ рж╣рзЯрзЗржЫрзЗ!");
})();
